{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "includes": ["!dist/*", "**/*.js", "**/*.ts"],
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "includes": ["!dist/*", "**/*.js", "**/*.ts"],
    "rules": {
      "recommended": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "javascript": {
    "parser": {
      "jsxEverywhere": false
    },
    "formatter": {
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "quoteStyle": "double"
    }
  }
}
